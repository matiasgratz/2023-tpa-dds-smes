                <thead>
                <tr>
                    <th>Entidad</th>
                </tr>
                </thead>
                <tbody>
                {{#entidades}}
                    <tr>
                        <td> {{nombreEntidad}} </td>
                    </tr>
                {{/entidades}}
                </tbody>
            </table>
    </div>

